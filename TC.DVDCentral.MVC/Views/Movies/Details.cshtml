@model TC.DVDCentral.Models.Movie

@{
    ViewBag.Title = "Details";
}
<div>
    <h4>Movie</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>

        </dt>
        <dd>
            <img src="~/images/@Model.ImagePath" class="image-thumb" alt="@Model.Title Image" /><br />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cost)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Rating.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Rating.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Director.FullName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Director.FullName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Format.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Format.Description)
        </dd>
    </dl>
    <h3>Genres</h3>
    <table>
        @foreach (var item in Model.Genres) 
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
            </tr>
        }
    </table>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Add to Cart", "AddToCart", "ShoppingCart", new { id = Model.Id }, null) |
    @Html.ActionLink("Back to List", "Index")
</p>
